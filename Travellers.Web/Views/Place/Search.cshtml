@model Travellers.Core.ViewModels.SearchPlaceModel
@{
	ViewBag.Title = "Search place";
}
<h2>Search place</h2>
@using (Html.BeginForm("Search", "Place", FormMethod.Post, new { @class = ".form-search" }))
{
	@Html.TextBoxFor(m => m.Query, new {@class = "input-medium search-query focus"})
	<button type="submit" class="btn">Search</button>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Name</th>
				<th>Description</th>
				<th>Points when visiting</th>
			</tr>
		</thead>
		@foreach (var place in Model.Places)
		{
			<tr>
				<td>
					@Html.ActionLink(place.Name, "Edit", "Place", new {id = place.Id}, null)
				</td>
				<td>@place.Description</td>
				<td>@place.Points</td>
			</tr>
		}
	</table>
}